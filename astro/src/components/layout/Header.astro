<style>
    header {
        position: fixed;
        top: 0;
        width: 100%;
        background: rgba(255, 255, 255, 0.98);
        border-bottom: 1px solid #f0f0f0;
        z-index: 1000;
        backdrop-filter: blur(10px);
    }

    nav {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px 60px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo {
        display: flex;
        align-items: center;
        font-size: 32px;
        font-weight: 900;
        letter-spacing: -1px;
    }

    .logo-text {
        color: #3d5af1;
    }

    .logo-x {
        color: #6b4ce6;
        position: relative;
        margin-right: 30px;
    }

    .logo-flower {
        position: absolute;
        top: -8px;
        right: -25px;
        width: 30px;
        height: 30px;
    }

    .petal {
        position: absolute;
        width: 8px;
        height: 12px;
        border-radius: 50%;
    }

    .petal:nth-child(1) { background: #3feaac; transform: rotate(-30deg) translate(-5px, 0); }
    .petal:nth-child(2) { background: #5dd9c1; transform: rotate(-10deg) translate(0, -3px); }
    .petal:nth-child(3) { background: #3d5af1; transform: rotate(10deg) translate(5px, -3px); }
    .petal:nth-child(4) { background: #6b4ce6; transform: rotate(30deg) translate(10px, 5px); }
    .petal:nth-child(5) { background: #8b3ce6; transform: rotate(50deg) translate(10px, 15px); }
    .petal:nth-child(6) { background: #6b4ce6; transform: rotate(70deg) translate(5px, 22px); }

    .nav-links {
        display: flex;
        gap: 40px;
        list-style: none;
        align-items: center;
    }

    .nav-links a {
        text-decoration: none;
        color: #666;
        font-size: 15px;
        transition: color 0.3s;
    }

    .nav-links a:hover {
        color: #3d5af1;
    }

    .nav-links a.active {
        color: #333;
        font-weight: 600;
    }

    .btn-primary {
        background: #6b4ce6;
        color: white !important;
        padding: 10px 30px;
        border-radius: 25px;
        font-weight: 600;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(107, 76, 230, 0.4);
    }

    @media (max-width: 768px) {
        nav {
            padding: 15px 20px;
        }

        .nav-links {
            display: none;
        }
    }
</style>
